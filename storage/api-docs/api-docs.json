    "info": {
        "title": "RUFORUM MEL API",
        "description": "RUFORUM MEL API Documentation - V1.0.0",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost/grad-track-api/api",
            "description": "Local server"
        },
        {
            "url": "https://skills-api.comfarnet.org/api",
